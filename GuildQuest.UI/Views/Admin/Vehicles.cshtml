@model GuildQuest.UI.Models.InventoryViewModel

@{
    Model.SearchParms.SearchType = ViewBag.SearchType;
}

<div class="rgba-blue-light">

    <div class="container-fluid">
        <div class="row justify-content-center ">
            <div class="mt-3"><h1><strong>@ViewBag.Message</strong></h1></div>
        </div>

        <div class="my-3 ml-2 row h3">
            <u>
                @Html.ActionLink(
                             linkText: "Add a new vehicle",
                             actionName: "AddVehicle",
                             controllerName: "Admin",
                             routeValues: null,
                             htmlAttributes: new
                             {
                                 @class = "hm-green-light  "
                             }
                             )
            </u>
        </div>

        @Html.Partial("_SearchPartial", Model.SearchParms)

        <div class="row justify-content-center my-3">
            <div id="inventoryHeader"><h1><strong>Search Results</strong></h1></div>
        </div>

        @Html.Partial("_InventoryPartial", Model)

    </div>
</div>
@section scripts{
    <script type="text/javascript">
       var pager = new Guild.Pager();

        $(document).ready(function () {
           pager.showPage(1);
        });
    </script>
}

