@using GuildQuest.UI.Models
@model InventoryViewModel

<div style="background-color: whitesmoke">

    <div class="container-fluid">
        <div class="row justify-content-center ">
            <div class="mt-3"><h1><strong>@ViewBag.Message</strong></h1></div>
        </div>
        <h4>   <u>
            @Html.ActionLink(
                linkText: "Add a new vehicle",
                actionName: "AddVehicle",
                controllerName: "Admin",
                routeValues: null,
                htmlAttributes: new
                {
                    @class = "hm-green-light  "
                }
                )
        </u> </h4>

        @Html.Partial("_SearchPartial", Model.SearchParms)

        <div class="row justify-content-center my-3">
            <div id="inventoryHeader"><h1><strong>Search Results</strong></h1></div>
        </div>  

        <div class="list-group" id="inventoryList">
            @foreach (VehicleViewModel vehicle in Model.Vehicles)
            {
                <div class="card-outline-warning">
                    @Html.Partial("_InventoryPartial", @vehicle)
                </div>
            }
        </div>
    </div>
</div>
